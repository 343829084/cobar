<cobar>
  
    <!-- 系统参数定义，服务端口、管理端口，处理器个数、线程池等。 -->
    <server>
        <property name="serverPort">8066</property>
        <property name="serverExecutor">8</property>
        <property name="managerExecutor">8</property>
        <property name="processors">4</property>
        <property name="processorExecutor">16</property>
        <property name="charset">utf8</property>
        <property name="idleTimeout">3600</property>
        <property name="connectionPoolSize">16</property>
    </server>

    <!-- 集群列表定义，指定集群节点的主机和权重，用于集群间的心跳和客户端负载均衡。 -->
    <cluster>
        <node>
            <property name="name">cobar1</property>
            <property name="host">127.0.0.1</property>
            <property name="weight">1</property>
        </node>
        <node>
            <property name="name">cobar2</property>
            <property name="host">192.168.0.2</property>
            <property name="weight">1</property>
        </node>
    </cluster>
   
    <!-- 隔离区定义，可以限定某个主机上只允许某个用户登录。 -->
    <quarantine>
        <host>
            <property name="name">192.168.0.10</property>
            <property name="users">test</property>
        </host>
        <host>
            <property name="name">192.168.0.11</property>
            <property name="users">test</property>
        </host>
    </quarantine>
    
    <!-- 用户访问定义，用户名、密码、schema等信息。 -->
    <users>
        <user>
            <property name="name">test</property>
            <property name="password">test</property>
            <property name="schemas">dbtest</property>
        </user>
        <user>
            <property name="name">root</property>
            <property name="password"></property>
        </user>
    </users>
    
    <!-- schema定义 -->
    <schemas>
        <schema>
            <property name="name">dbtest</property>
            <property name="dataNodes">N1</property>
            <property name="rule">com.alibaba.cobar.server.route.rule.Dbtest2Rule</property>
        </schema>
        <schema>
            <property name="name">dbtest2</property>
            <property name="dataNodes">N1,N2</property>
            <property name="rule">com.alibaba.cobar.server.route.rule.DbtestRule</property>
        </schema>
    </schemas>

    <!-- 数据节点定义，一个数据节点代表一份数据 -->
    <dataNodes>
        <dataNode>
            <property name="name">N1</property>
            <property name="dataSources">S1,S3</property>
        </dataNode>
        <dataNode>
            <property name="name">N2</property>
            <property name="dataSources">S2,S4</property>
        </dataNode>
    </dataNodes>

    <!-- 数据源定义，代表一个mysql的schema，并且关联访问用户以及密码 -->
    <dataSources>
        <dataSource>
            <property name="name">S1</property>
            <property name="instance">I1</property>
            <property name="schema">test</property>
            <property name="user">test</property>
            <property name="password">test</property>
        </dataSource>
        <dataSource>
            <property name="name">S2</property>
            <property name="instance">I1</property>
            <property name="schema">test</property>
            <property name="user">test</property>
            <property name="password">test</property>
        </dataSource>
        <dataSource>
            <property name="name">S3</property>
            <property name="instance">I2</property>
            <property name="schema">test</property>
            <property name="user">test</property>
            <property name="password">test</property>
        </dataSource>
        <dataSource>
            <property name="name">S4</property>
            <property name="instance">I2</property>
            <property name="schema">test</property>
            <property name="user">test</property>
            <property name="password">test</property>
        </dataSource>
    </dataSources>

    <instances>
        <instance>
            <property name="name">I1</property>
            <property name="machine">M1</property>
            <property name="port">3306</property>
        </instance>
        <instance>
            <property name="name">I2</property>
            <property name="machine">M1</property>
            <property name="port">3306</property>
        </instance>
    </instances>

    <machines>
        <machine>
            <property name="name">M1</property>
            <property name="host">127.0.0.1</property>
        </machine>
    </machines>

</cobar>
 